@model IEnumerable<ITS.Models.LinkViewModel>

@if (Model != null)
{
    <ul>
        @foreach(var item in Model)
        {
            if (item != null)
            {
                <li>@Html.ActionLink(item.Text, item.Action, item.Controller, null, new { 
                   @class = item.Selected ? "selected" : ""
                })</li>
            }
            else
            {
                <li class="menuSeparator"></li>
            }
        }
    </ul>
}