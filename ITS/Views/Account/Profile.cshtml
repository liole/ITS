@model ITS.Domain.Entities.UserProfilesViewModel

@{
    ViewBag.Title = "Профіль";
}

<h2>Мій профіль</h2>
@using(Html.BeginForm("Profile","Account"))
{ 
<div class="form-group-lg panel-body">
    <label class="col-sm-2 control-label">Ім'я</label>
    <div class="col-sm-10">
        <input class="form-control" id="focusedInput" type="text" value="@Model.FirstName" name="FirstName">
    </div>
</div>

<div class="form-group-lg panel-body">
    <label class="col-sm-2 control-label">Прізвище</label>
    <div class="col-sm-10">
        <input class="form-control" id="focusedInput" type="text" value="@Model.LastName" name="LastName">
    </div>
</div>
<div class="form-group-lg panel-body">
    <label class="col-sm-2 control-label">Логін</label>
    <div class="col-sm-10">
        <p class="form-control-static">@Model.Login</p>
    </div>
</div>
<div class="form-group-lg panel-body">
    <label class="col-sm-2 control-label" for="inputPassword">Старий пароль</label>
    <div class="col-sm-10">
        <input class="form-control" id="focusedInput" type="password" name="OldPassword">
    </div>
</div>

<div class="form-group-lg panel-body">
    <label class="col-sm-2 control-label" for="inputPassword">Новий пароль</label>
    <div class="col-sm-10">
        <input class="form-control" id="focusedInput" type="password" name="NewPassword">
    </div>
</div>

<div class="form-group-lg panel-body">
    <label class="col-sm-2 control-label" for="inputPassword">Підтвердити Пароль</label>
    <div class="col-sm-10">
        <input class="form-control" id="focusedInput" type="password" name="ConfirmPassword">
    </div>
</div>
<div class="panel-footer">
    @*<a href="@Url.Action("List", "User")" class="btn btn-default">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    </a>*@
    <button type="submit" value="Save" class="btn btn-info">
        <span class="glyphicon glyphicon-floppy-disk"></span>
    </button>
</div>
}



