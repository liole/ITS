@{
    ViewBag.Title = "Вхід";
}

<h2 class="text-center">@ViewBag.Title</h2>


@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.Label("login", "Логін", new { @class = "control-label col-sm-3" })
        <div class="col-sm-6">
            @Html.TextBox("login", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("password", "Пароль", new { @class = "control-label col-sm-3" })
        <div class="col-sm-6">
            @Html.Password("password", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-3">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-user"></span>
                &nbsp;Увійти
            </button>
        </div>
    </div>
}
