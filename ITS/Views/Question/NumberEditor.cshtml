@model ITS.Domain.Entities.NumberQuestion

@{
    ViewBag.Title = (ViewBag.Create ? "Створити" : "Редагувати") + " запитання";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm((ViewBag.Create ? "CreateNumber" : "EditNumber"), "Question", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.QuestionText, "Запитання", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.QuestionText, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coefficient, "Коефіцієнт", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Coefficient, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coefficient, "Правильна відповідь", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Answer, new { @class = "form-control", type="number" })
        </div>
    </div>
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.TestID)
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-floppy-disk"></span>
                &nbsp;@(ViewBag.Create ? "Створити" : "Зберегти")
            </button>
        </div>
    </div>
}