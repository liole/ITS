@model ITS.Domain.Entities.ABCDQuestion

@{
    ViewBag.Title = (ViewBag.Create ? "Створити" : "Редагувати") + " запитання";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm((ViewBag.Create ? "CreateABCD" : "EditABCD"), "Question", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.QuestionText, "Запитання", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.QuestionText, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coefficient, "Коефіцієнт", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Coefficient, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coefficient, "А", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.AnswerA, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coefficient, "Б", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.AnswerB, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coefficient, "В", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.AnswerC, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coefficient, "Г", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.AnswerD, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coefficient, "Правильна відповідь", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
           @Html.DropDownListFor(m => m.Answer, (IEnumerable<SelectListItem>)ViewBag.ABCDList, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.TestID)
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-floppy-disk"></span>
                &nbsp;@(ViewBag.Create ? "Створити" : "Зберегти")
            </button>
        </div>
    </div>
}