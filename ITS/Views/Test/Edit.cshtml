@using ITS.Domain.Entities;
@model Test

@{
    ViewBag.Title = (ViewBag.Create ? "Створити" : "Редагувати") + " тест";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm((ViewBag.Create ? "Create" : "Edit"), "Test", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Назва", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Предмет", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.SubjectID, (IEnumerable<SelectListItem>)ViewBag.Subjects, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Кількість балів", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Mark, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Перемішувати", new { @class = "control-label col-sm-2" })
        <div class="col-sm-1">
            @Html.CheckBoxFor(m => m.Randomize, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.UserID)
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-floppy-disk"></span>
                &nbsp;@(ViewBag.Create ? "Створити" : "Зберегти")
            </button>
        </div>
    </div>
}