@model IEnumerable<ITS.Models.GroupTestViewModel>

@{
    ViewBag.Title = "Призначити тест групам";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th class="text-center">Назва групи</th>
        <th class="text-center">Дія</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">@item.Group.Name</td>
            <td class="text-center">
                @if (item.IsAssigned)
                {
                    <a href="@Url.Action("RemoveGroup", "Test", new { id = ViewBag.TestID, groupId = item.Group.ID })" class="btn btn-warning">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </a>
                }
                else
                {
                    <a href="@Url.Action("AddGroup", "Test", new { id = ViewBag.TestID, groupId = item.Group.ID })" class="btn btn-success">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </a>
                }
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Details", "Test", new { id = ViewBag.TestID })" class="btn btn-default">
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
</a>